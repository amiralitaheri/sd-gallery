.container {
  padding: 16px;

  form {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
}

.row {
  display: flex;
  gap: 16px;
  align-items: center;
}

.selectContainer {
  display: flex;
  gap: 4px;
  align-items: center;

  label {
    font-size: 0.9rem;
  }
}

.submit {
  background: var(--color-primary);
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 1rem;
  padding: 2px 8px;
}
